<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scrollView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/add_watercycle"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_color"
    android:orientation="vertical"
    android:visibility="visible"
    tools:context="com.cycleadd.AddWaterCycle">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tittle_watercycle"
            android:layout_width="250dp"
            android:fontFamily="@font/bs_regular"
            android:layout_height="match_parent"
            android:layout_gravity="left"
            android:gravity="center"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="15dp"
            android:text="@string/opcion0_anhadir"
            android:textColor="@color/colorWhite"
            android:textSize="27dp" />

        <ImageView
            android:id="@+id/banner_watercycle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:src="@mipmap/logo_foreground" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:gravity="center"
            android:id="@+id/tx_enun1_watercycle"
            android:fontFamily="@font/bs_regular"
            android:textSize="14dp"
            android:layout_margin="20dp"
            android:layout_marginTop="30dp"
            android:text="@string/opcion0_anhadir_DA"
            android:textColor="@color/colorWhite" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:id="@+id/tx_enun2_watercycle"
            android:gravity="center"
            android:fontFamily="@font/bs_regular"
            android:textSize="14dp"
            android:layout_margin="20dp"
            android:layout_marginTop="30dp"
            android:text="@string/opcion1_title_hacer"
            android:textColor="@color/colorWhite" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:gravity="center">

            <Button
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:fontFamily="@font/bs_regular"
                android:text="@string/opcion2_resistencia"
                android:textAllCaps="false"
                android:id="@+id/btt_res_watercycle"
                android:background="@drawable/botonredondo_second"
                android:textColor="@color/colorWhite"
                android:textSize="14dp"/>

            <Button
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:fontFamily="@font/bs_regular"
                android:text="@string/opcion3_tecnica"
                android:textAllCaps="false"
                android:id="@+id/btt_tec_watercycle"
                android:background="@drawable/botonredondo_second"
                android:textColor="@color/colorWhite"
                android:textSize="14dp"/>

            <Button
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:fontFamily="@font/bs_regular"
                android:text="@string/opcion4_velocidad"
                android:textAllCaps="false"
                android:id="@+id/btt_vel_watercycle"
                android:background="@drawable/botonredondo_second"
                android:textColor="@color/colorWhite"
                android:textSize="14dp"/>

        </LinearLayout>




        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="136dp"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:gravity="center">

            <Button
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/bs_regular"
                android:text="@string/opcion7_Retroceder"
                android:textAllCaps="false"
                android:gravity="center"
                android:id="@+id/retro_addwater"
                android:background="@drawable/borderedondo_banner"
                android:textColor="@color/colorWhite"
                android:textSize="14dp"
                android:layout_marginRight="10dp"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:id="@+id/avan_addwater"
                android:fontFamily="@font/bs_regular"
                android:text="@string/opcion8_Avanzar"
                android:textAllCaps="false"
                android:layout_marginLeft="10dp"
                android:textSize="14dp"
                android:gravity="center"
                android:background="@drawable/borderedondo_banner"
                android:textColor="@color/colorWhite"/>


        </LinearLayout>


    </LinearLayout>

</LinearLayout>
</ScrollView>
