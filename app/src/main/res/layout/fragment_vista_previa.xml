<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragment_vistaprevia"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bg_color"
    android:visibility="visible"
    tools:context="com.cycleadd.AddVistaPrevia">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/text_title_vprevia"
            android:layout_width="250dp"
            android:fontFamily="@font/bs_regular"
            android:layout_height="match_parent"
            android:layout_gravity="left"
            android:gravity="center"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="15dp"
            android:text="@string/opcion0_anhadir"
            android:textColor="@color/colorWhite"
            android:textSize="27dp" />

        <ImageView
            android:id="@+id/banner_vprevia"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:src="@mipmap/logo_foreground" />

    </LinearLayout>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:gravity="center"
            android:fontFamily="@font/bs_regular"
            android:textSize="17dp"
            android:id="@+id/enun1_vprevia"
            android:layout_margin="20dp"
            android:layout_marginTop="30dp"
            android:text="@string/previous_visual"
            android:textColor="@color/colorWhite" />
        
        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/colorSecond"
            android:layout_gravity="center"
            android:gravity="center">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:gravity="center"
                android:id="@+id/enun2_vprevia"
                android:fontFamily="@font/bs_regular"
                android:textSize="15dp"
                android:layout_margin="2dp"
                android:text="@string/opcion0_anhadir_DT"
                android:textColor="@color/colorWhite" />

            <ListView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/list1_vprevia">

            </ListView>

        </LinearLayout>

        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/colorSecond"
            android:layout_gravity="center"
            android:gravity="center">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:gravity="center"
                android:fontFamily="@font/bs_regular"
                android:textSize="15dp"
                android:id="@+id/enun3_vprevia"
                android:layout_margin="2dp"
                android:text="@string/opcion0_anhadir_DA"
                android:textColor="@color/colorWhite" />

            <ListView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/list2_vprevia">

            </ListView>

        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center">

        <Button
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="40dp"
            android:id="@+id/retro_vprevia"
            android:fontFamily="@font/bs_regular"
            android:text="@string/opcion7_Retroceder"
            android:textAllCaps="false"
            android:background="@color/colorBanner"
            android:textColor="@color/colorWhite"
            android:textSize="17dp"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:fontFamily="@font/bs_regular"
            android:text="@string/opcion8_Avanzar"
            android:textAllCaps="false"
            android:id="@+id/avan_vprevia"
            android:layout_marginLeft="130dp"
            android:textSize="17dp"
            android:background="@color/colorBanner"
            android:textColor="@color/colorWhite"/>


    </LinearLayout>

</LinearLayout>
