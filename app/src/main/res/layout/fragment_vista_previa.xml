<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/calendarioanhadir"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorMain"
    android:visibility="visible"
    tools:context=".ui.calendarioanhadir.CalendarioAnhadirFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="@color/colorBanner"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/text_title_calenanhadir"
            android:layout_width="250dp"
            android:fontFamily="@font/bs_regular"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginLeft="10dp"
            android:text="@string/opcion0_anhadir"
            android:textColor="@color/colorSecond"
            android:textSize="27dp" />

        <ImageView
            android:id="@+id/imgv_controlprueba"
            android:layout_width="150dp"
            android:layout_gravity="right"
            android:layout_height="match_parent"
            android:src="@mipmap/natacion_foreground" />

    </LinearLayout>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:gravity="center"
            android:fontFamily="@font/bs_regular"
            android:textSize="17dp"
            android:layout_margin="20dp"
            android:layout_marginTop="30dp"
            android:text="@string/previous_visual"
            android:textColor="@color/colorBanner" />

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorMain">

            <TableRow>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:fontFamily="@font/bs_regular"
                    android:textSize="17dp"
                    android:layout_margin="20dp"
                    android:layout_marginTop="30dp"
                    android:text="@string/opcion1_titlecalendaranhadir"
                    android:textColor="@color/colorBanner" />

                <ListView
                    />
            </TableRow>
        </TableLayout>
    </LinearLayout>


</LinearLayout>
