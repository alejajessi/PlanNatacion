<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fr_volumencycle"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_color"
    android:orientation="vertical"
    android:visibility="visible"
    tools:context="com.cycleadd.AddVolumenCycle">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tittle_volumencycle"
            android:layout_width="250dp"
            android:fontFamily="@font/bs_regular"
            android:layout_height="match_parent"
            android:layout_gravity="left"
            android:gravity="center"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="15dp"
            android:text="@string/opcion0_anhadir"
            android:textColor="@color/colorWhite"
            android:textSize="27dp" />

        <ImageView
            android:id="@+id/banner_volumencycle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:src="@mipmap/logo_foreground" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_marginTop="20dp"
            android:layout_height="wrap_content"
            android:id="@+id/tx_enun1_volcycle"
            android:gravity="center"
            android:fontFamily="@font/bs_regular"
            android:textSize="16dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:text="@string/volumen_agua"
            android:textColor="@color/colorWhite"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginRight="70dp"
            android:layout_marginLeft="70dp"
            android:background="@drawable/borderedondo_txt"
            android:textColor="@color/colorBanner"
            android:layout_gravity="center"
            android:id="@+id/ed_resp1_volcycle"
            android:fontFamily="@font/bs_regular"
            android:textSize="14dp"
            android:gravity="center"
            android:inputType="number"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_marginTop="20dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:fontFamily="@font/bs_regular"
            android:textSize="16dp"
            android:id="@+id/tx_enun2_volcycle"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:text="@string/volumen_tierra"
            android:textColor="@color/colorWhite"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginRight="70dp"
            android:layout_marginLeft="70dp"
            android:background="@drawable/borderedondo_txt"
            android:textColor="@color/colorBanner"
            android:layout_gravity="center"
            android:fontFamily="@font/bs_regular"
            android:id="@+id/ed_resp2_volcycle"
            android:textSize="14dp"
            android:gravity="center"
            android:inputType="number"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="136dp"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginTop="70dp">

            <Button
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginRight="10dp"
                android:fontFamily="@font/bs_regular"
                android:text="@string/opcion7_Retroceder"
                android:textAllCaps="false"
                android:id="@+id/btt_retro_volcycle"
                android:background="@drawable/borderedondo_banner"
                android:textColor="@color/colorWhite"
                android:textSize="14dp"
                android:layout_gravity="center"
                android:gravity="center"
                />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="10dp"
                android:fontFamily="@font/bs_regular"
                android:text="@string/opcion8_Avanzar"
                android:textAllCaps="false"
                android:textSize="14dp"
                android:id="@+id/btt_avan_volcycle"
                android:background="@drawable/borderedondo_banner"
                android:textColor="@color/colorWhite"
                android:layout_gravity="center"
                android:gravity="center"/>


        </LinearLayout>

    </LinearLayout>

</LinearLayout>

