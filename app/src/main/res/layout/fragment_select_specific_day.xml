<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scrollView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/fragment_select_specific_day"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg_color"
        android:orientation="vertical"
        android:visibility="visible"
        tools:context="com.specificday.SelectSpecificDay">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/text_title_selectspec_day"
                android:layout_width="250dp"
                android:fontFamily="@font/bs_regular"
                android:layout_height="match_parent"
                android:layout_gravity="left"
                android:gravity="center"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="15dp"
                android:text="@string/consul_dia"
                android:textColor="@color/colorWhite"
                android:textSize="27dp" />

            <ImageView
                android:id="@+id/imgv_previa"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:src="@mipmap/logo_foreground" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="25dp"
            android:layout_gravity="center"
            android:gravity="center">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/colorWhite"
                android:textSize="15dp"
                android:layout_marginTop="25dp"
                android:id="@+id/enun1_select_specific_day"
                android:fontFamily="@font/bs_regular"
                android:gravity="center"
                android:text="@string/consul_enun_dia"/>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/colorBanner"
                android:textSize="14dp"
                android:layout_margin="15dp"
                android:background="@drawable/borderedondo_txt"
                android:id="@+id/tx_fecha_specific_day"
                android:fontFamily="@font/bs_regular"
                android:gravity="center"/>

            <ImageButton
                android:layout_width="60dp"
                android:layout_marginTop="20dp"
                android:layout_height="60dp"
                android:id="@+id/date_specific_dy"
                android:background="@mipmap/calendario"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginTop="70dp">

            <Button
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:background="@drawable/borderedondo_banner"
                android:fontFamily="@font/bs_regular"
                android:gravity="center"
                android:text="@string/opcion7_Retroceder"
                android:textAllCaps="false"
                android:id="@+id/retro_specificDay"
                android:textColor="@color/colorWhite"
                android:layout_marginRight="10dp"
                android:textSize="14dp" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/borderedondo_banner"
                android:fontFamily="@font/bs_regular"
                android:gravity="center"
                android:id="@+id/avan_specificDay"
                android:layout_marginLeft="10dp"
                android:text="@string/opcion8_Avanzar"
                android:textAllCaps="false"
                android:textColor="@color/colorWhite"
                android:textSize="14dp" />

        </LinearLayout>
    </LinearLayout>
</ScrollView>


