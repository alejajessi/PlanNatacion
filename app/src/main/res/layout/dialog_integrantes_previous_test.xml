<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_color"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="420dp"
        android:orientation="vertical">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/logo_dialogo"
            android:src="@mipmap/logo_foreground"
            android:layout_gravity="center"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/colorWhite"
            android:textSize="13dp"
            android:id="@+id/enun_diaintprueb"
            android:fontFamily="@font/bs_regular"
            android:gravity="center"
            android:layout_margin="15dp"
            android:text="@string/seleccione_nadador"/>


        <ListView
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:fontFamily="@font/bs_regular"
            android:background="@drawable/borderedondo_txt"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:id="@+id/list_dialog_previous_test"
            android:textColor="@color/colorBanner"
            android:textSize="14dp"/>

    </LinearLayout>

</LinearLayout>