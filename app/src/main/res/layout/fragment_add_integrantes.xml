<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragment_addIntegrantes"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_color"
    android:orientation="vertical"
    android:visibility="visible"
    tools:context="com.cycleadd.AddIntegrantes">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/tittle_addinteg"
            android:layout_width="250dp"
            android:fontFamily="@font/bs_regular"
            android:layout_height="match_parent"
            android:layout_gravity="left"
            android:gravity="center"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="15dp"
            android:text="@string/opcion0_anhadir"
            android:textColor="@color/colorWhite"
            android:textSize="27dp" />

        <ImageView
            android:id="@+id/banner_addinteg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:src="@mipmap/logo_foreground" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/colorWhite"
            android:textSize="16dp"
            android:text="@string/enun_integ"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_margin="10dp"
            android:layout_marginBottom="25dp"
            android:id="@+id/tx_enun_addint"
            android:layout_marginTop="25dp"
            android:fontFamily="@font/bs_regular"/>

        <ListView
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:fontFamily="@font/bs_regular"
            android:background="@drawable/borderedondo_txt"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:id="@+id/integrantes_lista"
            android:textColor="@color/colorBanner"
            android:textSize="14dp"/>

        <Button
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:id="@+id/bttmore_addinteg"
            android:textAllCaps="false"
            android:textSize="14dp"
            android:background="@drawable/anhadir_foreground"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="136dp"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:gravity="center">

        <Button
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginRight="10dp"
            android:fontFamily="@font/bs_regular"
            android:text="@string/opcion7_Retroceder"
            android:textAllCaps="false"
            android:id="@+id/retro_addinteg"
            android:background="@drawable/borderedondo_banner"
            android:textColor="@color/colorWhite"
            android:textSize="14dp"
            android:layout_gravity="center"
            android:gravity="center"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"
            android:fontFamily="@font/bs_regular"
            android:text="@string/crear_ciclo"
            android:textAllCaps="false"
            android:id="@+id/avan_addinteg"
            android:textSize="14dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:background="@drawable/borderedondo_banner"
            android:textColor="@color/colorWhite"/>


    </LinearLayout>


</LinearLayout>