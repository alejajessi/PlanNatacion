<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scrollView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/calendarioanhadir"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_color"
    android:orientation="vertical"
    android:visibility="visible"
    tools:context=".ui.calendarioanhadir.CalendarioAnhadirFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/text_title_calenanhadir"
            android:layout_width="250dp"
            android:fontFamily="@font/bs_regular"
            android:layout_height="match_parent"
            android:layout_gravity="left"
            android:gravity="center"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="15dp"
            android:text="@string/mostrar_ciclo"
            android:textColor="@color/colorWhite"
            android:textSize="27dp" />

        <ImageView
            android:id="@+id/imgv_previa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:src="@mipmap/logo_foreground" />

    </LinearLayout>


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/opciones"
        android:textColor="@color/colorWhite"
        android:background="@color/colorBanner"
        android:layout_gravity="center"
        android:gravity="center"
        android:textAllCaps="false"
        android:fontFamily="@font/bs_regular"
        android:layout_marginTop="10dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginRight="10dp"
        android:orientation="vertical"
        android:layout_marginVertical="10dp"
        android:layout_marginLeft="10dp"
        android:background="@color/colorSecond">

        <TextView
            android:id="@+id/text_title_calenanhadir"
            android:layout_width="match_parent"
            android:fontFamily="@font/bs_regular"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="15dp"
            android:text="@string/nombre"
            android:textColor="@color/colorWhite"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/text_title_calenanhadir"
            android:layout_width="match_parent"
            android:fontFamily="@font/bs_regular"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="15dp"
            android:text="@string/inicio"
            android:textColor="@color/colorWhite"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/text_title_calenanhadir"
            android:layout_width="match_parent"
            android:fontFamily="@font/bs_regular"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="15dp"
            android:text="@string/fin"
            android:textColor="@color/colorWhite"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/text_title_calenanhadir"
            android:layout_width="match_parent"
            android:fontFamily="@font/bs_regular"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="15dp"
            android:text="@string/info_DA"
            android:textColor="@color/colorWhite"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/text_title_calenanhadir"
            android:layout_width="match_parent"
            android:fontFamily="@font/bs_regular"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="15dp"
            android:text="@string/info_DT"
            android:textColor="@color/colorWhite"
            android:textSize="16dp" />
        <TextView
            android:id="@+id/text_title_calenanhadir"
            android:layout_width="match_parent"
            android:fontFamily="@font/bs_regular"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="15dp"
            android:text="@string/integra"
            android:textColor="@color/colorWhite"
            android:textSize="16dp" />

    </LinearLayout>
</LinearLayout>
</ScrollView>