<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scrollView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/addearthcycle"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_color"
    android:orientation="vertical"
    android:visibility="visible"
    tools:context=".AddPrueba">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tittle_earthcycle"
            android:layout_width="250dp"
            android:fontFamily="@font/bs_regular"
            android:layout_height="match_parent"
            android:layout_gravity="left"
            android:gravity="center"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="15dp"
            android:text="@string/add_pruebas"
            android:textColor="@color/colorWhite"
            android:textSize="27dp" />

        <ImageView
            android:id="@+id/banner_earthcycle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:src="@mipmap/logo_foreground" />
        
    </LinearLayout>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="10dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/colorWhite"
            android:textSize="14dp"
            android:text="@string/nom_prueba"
            android:id="@+id/tx_enun1_addp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="25dp"
            android:fontFamily="@font/bs_regular"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorWhite"
            android:textColor="@color/colorBanner"
            android:layout_margin="10dp"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:id="@+id/ed_nombre_addp"
            android:fontFamily="@font/bs_regular"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/colorWhite"
            android:textSize="14dp"
            android:fontFamily="@font/bs_regular"
            android:text="@string/seleccion_pruebas"
            android:id="@+id/tx_enun1_addp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="20dp"/>

        <CheckBox
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/colorWhite"
            android:text="@string/comp_prep"
            android:buttonTint="@color/colorWhite"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="25dp"
            android:id="@+id/cb_addp1"
            android:textSize="14dp"
            android:fontFamily="@font/bs_regular"/>

        <CheckBox
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/colorWhite"
            android:text="@string/test"
            android:textSize="14dp"
            android:fontFamily="@font/bs_regular"
            android:buttonTint="@color/colorWhite"
            android:layout_marginLeft="15dp"
            android:id="@+id/cb_addp2"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="136dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:layout_width="100dp"
            android:layout_marginTop="30dp"
            android:layout_height="wrap_content"
            android:background="@color/colorBanner"
            android:fontFamily="@font/bs_regular"
            android:gravity="center"
            android:text="@string/opcion7_Retroceder"
            android:textAllCaps="false"
            android:id="@+id/retro_sp"
            android:textColor="@color/colorWhite"
            android:layout_marginRight="10dp"
            android:textSize="14dp" />

        <Button
            android:layout_width="100dp"
            android:layout_marginTop="30dp"
            android:layout_height="wrap_content"
            android:background="@color/colorBanner"
            android:fontFamily="@font/bs_regular"
            android:gravity="center"
            android:text="@string/anadir_pr"
            android:textAllCaps="false"
            android:id="@+id/anadir_sp"
            android:textColor="@color/colorWhite"
            android:layout_marginRight="10dp"
            android:textSize="14dp" />

    </LinearLayout>
</LinearLayout>
</ScrollView>